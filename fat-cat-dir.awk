#
# select media directories in fat-tre-*.dat
#
# ==============================================================================
BEGIN {
   FS=":"
}
# ==============================================================================
{
   n=split($1,a,"/")
   sub("fat-tre-","",a[n])
   switch($2)
   {
      case /Movies/ :
         t="Movies"
         break
      case /Videos/ :
         t="Videos"
         break
      case /mini-Series/ :
         t="mini-Series"
         break
      case /Series/ :
         t="Series"
         break
   }
   printf("%-15s %s\n",a[n],t)
}
# ==============================================================================
END {
}
